
# COMPRAR EN UNA TIENDA DE ROPA

precio_polo = 17
cantidad = 70
precio_total = precio_polo * cantidad
print("El precio total de los polos es:",precio_total)


# CALCULAR LA EDAD DE UNA PERSONA

a単o_actual = 2026
a単o_nacimiento = 1988
edad = a単o_actual - a単o_nacimiento
print("La edad de la persona es:",edad)


# PROMEDIO DE NOTAS

nota1 = 17
nota2 = 15
nota3 = 16
promedio = (nota1 + nota2 + nota3) / 3
print("El promedio de las notas es:",promedio)


# salario mensual + bono

salario_mensual = 1500
bono = 300
salario_total = salario_mensual + bono
print("El salario total es:",salario_total)


# Consumo de gasolina

gasolina_diaria = 5
dias = 30
consumo_mensual = gasolina_diaria * dias
print("El consumo mensual de gasolina es de:",consumo_mensual,"litros")


# consersion de dolares a soles

dolares = 150
tipo_de_cambio = 3.75
soles = dolares * tipo_de_cambio
print("La conversion de dolares a soles es: ",soles,"soles")

# Descuento en una tienda
precio_del_producto = 150
descuento = 0.50 # 50% de descuento
precio_con_descuento = precio_del_producto-(precio_del_producto * descuento)
print("El precio del producto con descuento es: ",precio_con_descuento,"soles")






